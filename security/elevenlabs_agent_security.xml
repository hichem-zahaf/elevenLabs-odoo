<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- ElevenLabs Agent Access Rights -->
        <record id="group_elevenlabs_vip_manager" model="res.groups">
            <field name="name">ElevenLabs VIP Manager</field>
            <field name="category_id" ref="base.module_category_website"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Users can manage VIP status for ElevenLabs AI Assistant targeting.</field>
        </record>

        <!-- ElevenLabs Usage Manager Group -->
        <record id="group_elevenlabs_usage_manager" model="res.groups">
            <field name="name">ElevenLabs Usage Manager</field>
            <field name="category_id" ref="base.module_category_website"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Users can view and manage ElevenLabs AI Assistant usage statistics.</field>
        </record>

        <!-- Model reference for ElevenLabs Agent Usage -->
        <record id="model_elevenlabs_agent_usage" model="ir.model">
            <field name="name">elevenlabs.agent.usage</field>
            <field name="info">ElevenLabs Agent Usage Tracking</field>
        </record>

        <!-- Default ACL for usage model -->
        <record id="elevenlabs_usage_access_public" model="ir.model.access">
            <field name="name">elevenlabs.agent.usage public</field>
            <field name="model_id" ref="model_elevenlabs_agent_usage"/>
            <field name="group_id" ref="base.group_public"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="elevenlabs_usage_access_portal" model="ir.model.access">
            <field name="name">elevenlabs.agent.usage portal</field>
            <field name="model_id" ref="model_elevenlabs_agent_usage"/>
            <field name="group_id" ref="base.group_portal"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="elevenlabs_usage_access_user" model="ir.model.access">
            <field name="name">elevenlabs.agent.usage user</field>
            <field name="model_id" ref="model_elevenlabs_agent_usage"/>
            <field name="group_id" ref="base.group_user"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="elevenlabs_usage_access_manager" model="ir.model.access">
            <field name="name">elevenlabs.agent.usage manager</field>
            <field name="model_id" ref="model_elevenlabs_agent_usage"/>
            <field name="group_id" ref="group_elevenlabs_usage_manager"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="elevenlabs_usage_access_system" model="ir.model.access">
            <field name="name">elevenlabs.agent.usage system</field>
            <field name="model_id" ref="model_elevenlabs_agent_usage"/>
            <field name="group_id" ref="base.group_system"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Portal users can see their own usage -->
        <record id="elevenlabs_usage_portal_rule" model="ir.rule">
            <field name="name">ElevenLabs Usage: Portal users see their own</field>
            <field name="model_id" ref="model_elevenlabs_agent_usage"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Usage managers can see all usage -->
        <record id="elevenlabs_usage_manager_rule" model="ir.rule">
            <field name="name">ElevenLabs Usage: Managers see all</field>
            <field name="model_id" ref="model_elevenlabs_agent_usage"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_elevenlabs_usage_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- System administrators can see all usage -->
        <record id="elevenlabs_usage_system_rule" model="ir.rule">
            <field name="name">ElevenLabs Usage: System administrators see all</field>
            <field name="model_id" ref="model_elevenlabs_agent_usage"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
